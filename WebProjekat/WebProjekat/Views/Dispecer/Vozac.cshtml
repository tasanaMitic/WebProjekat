
@{
    ViewBag.Title = "Vozac";
}

<div style="text-align:center">
    <h2>Kreiraj vozača</h2>
</div>

<html>
<body>
    <form action="/Dispecer/VozacNapravi">
        <table border="1" align="center" style="background-color:cornsilk">
            <tr>
                <td colspan="2" align="center">UNESITE PODATKE:</td>
            </tr>

            <tr>
                <td colspan="2" align="center">Lični podaci:</td>
            </tr>

            <tr>
                <td>Korisničko ime:</td>
                <td><input type="text" name="korisnickoIme" /></td>
            </tr>

            <tr>
                <td>Lozinka:</td>
                <td><input type="text" name="lozinka" /></td>
            </tr>

            <tr>
                <td>Ime:</td>
                <td><input type="text" name="ime" /></td>
            </tr>

            <tr>
                <td>Prezime:</td>
                <td><input type="text" name="prezime" /></td>
            </tr>

            <tr>
                <td>JMBG:</td>
                <td><input type="text" name="jmbg" /></td>
            </tr>

            <tr>
                <td>Pol:</td>
                <td>
                    <select name="pol">
                        <option value="MUSKI">Muški</option>
                        <option value="ZENSKI">Ženski</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td>E-mail:</td>
                <td><input type="text" name="email" /></td>
            </tr>

            <tr>
                <td>Kontakt telefon:</td>
                <td><input type="text" name="brojTelefona" /></td>
            </tr>

            <tr>
                <td colspan="2" align="center">Podaci o adresi:</td>
            </tr>

            <tr>
                <td>Ulica:</td>
                <td><input type="text" name="ulica" /></td>
            </tr>

            <tr>
                <td>Broj:</td>
                <td><input type="text" name="broj" /></td>
            </tr>

            <tr>
                <td>Ime mesta:</td>
                <td><input type="text" name="mesto" /></td>
            </tr>

            <tr>
                <td>Pozivni broj:</td>
                <td><input type="text" name="pozivniBroj" /></td>
            </tr>

            <tr>
                <td colspan="2" align="center">Podaci o automobilu:</td>
            </tr>

            <tr>
                <td>Godište automobila:</td>
                <td><input type="text" name="godiste" /></td>
            </tr>

            <tr>
                <td>Registraciona oznaka:</td>
                <td><input type="text" name="registracija" /></td>
            </tr>

            <tr>
                <td>Broj taxi vozila:</td>
                <td><input type="text" name="taxi" /></td>
            </tr>

            <tr>
                <td>Tip vozila:</td>
                <td>
                    <select name="tipVozila">
                        <option value="PUTNICKI">Putnički</option>
                        <option value="KOMBI">Kombi</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Sačuvaj" />
                </td>
            </tr>
        </table>
    </form>

    <form action="/Dispecer/Index">
        <table align="center">
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Nazad" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
