@model WebProjekat.Models.Voznja
@{
    ViewBag.Title = "NeuspesnaVoznja";
}

<h2>Uspešno promenjen status vožnje.</h2>
<h3>Trenutni status vožnje je @Model.StatusVoznje.</h3>

@{int i = 0;
    foreach (WebProjekat.Models.Voznja v in WebProjekat.Models.Korisnici.ListaSvihVoznji)
    {
        if (v == Model)
        {
            i = WebProjekat.Models.Korisnici.ListaSvihVoznji.IndexOf(v);
        }
    }
}

<html>
<body>
    <form action="/Vozac/NeuspesnaVoznja">
        <table border="1" style="background-color:lemonchiffon" align="center">
            <tr>
                <td colspan="2" align="center">Unesite potrebne podatke:</td>
            </tr>

            <tr>
                <td>Ocena:</td>
                <td>
                    <select name="ocena">
                        <option value="NEOCENJEN" selected="selected">0</option>
                        <option value="VRLOLOSE">1</option>
                        <option value="LOSE">2</option>
                        <option value="DOBRO">3</option>
                        <option value="VRLODOBRO">4</option>
                        <option value="ODLICNO">5</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td>Komentar:</td>
                <td><textarea name="komentar" rows="5" cols="40"></textarea></td>
            </tr>

            <tr>
                <td colspan="2" align="center">
                    <input type="hidden" name="index" value="@i" />
                    <input type="submit" value="Sačuvaj" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>

